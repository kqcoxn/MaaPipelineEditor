# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.go text eol=lf
*.json text eol=lf
*.md text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.less text eol=lf
*.scss text eol=lf
*.svg text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
